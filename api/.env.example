# Example environment file for handlers/monitor.js
# Copy this to .env and fill in your own values

# Redis (for storing attesters, safes, and claims data)
REDIS_URL=redis://localhost:6379

# Database (if used by other handlers)
DATABASE_URL=postgresql://<user>:<password>@<host>/<db>?sslmode=require
DATABASE_URL_UNPOOLED=postgresql://<user>:<password>@<host>/<db>?sslmode=require

# Sepolia
SEPOLIA_RPC_WS=wss://sepolia.infura.io/ws/v3/<your-infura-project-id>
# Optional: set to 0 to scan from genesis or omit to start from current head on first run
SEPOLIA_START_BLOCK=0
# Optional: confirmations delay to avoid reorgs
SEPOLIA_CONFIRMATIONS=5

# Sepolia Contract Addresses (matches web/.env.example naming)
SEPOLIA_ATTESTERS_PROXY=0xd40C18eFfD79d28D16ffBEbB8Cb059825376dA7D
SEPOLIA_SAFES_PROXY=0x354Ca87d709fBB8Afc853A7AF6EFB6C865023163
SEPOLIA_CLAIMS_PROXY=0xc9a15ECc6AB6dA17E8EaF9177d31Ef55b0a50Ede

# Mainnet
MAINNET_RPC_WS=wss://mainnet.infura.io/ws/v3/<your-infura-project-id>
# Optional
MAINNET_START_BLOCK=0
MAINNET_CONFIRMATIONS=5

# Mainnet Contract Addresses (matches web/.env.example naming)
MAINNET_ATTESTERS_PROXY=0x458F7192c97CfC909F0BC323A1306F660c7E91c9
MAINNET_SAFES_PROXY=0xE29B5B8A909F77223133A67F4fA494DF548DF384
MAINNET_CLAIMS_PROXY=0xCBED2362c00587720aC216C37E4b62bCAB2F53E1

# Global fallback (used if per-network value not set)
CONFIRMATIONS=5
